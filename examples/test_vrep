#!/usr/bin/env python

import time

from pygesture.simulation import config, vrepsim

sim = vrepsim.VrepSimulation(config.vrep_port)
sim.start()
robot = vrepsim.Robot(sim.clientId, config.actions)

robot.do_action("forearm-supination")
time.sleep(1.8)
robot.do_action("rest")

robot.do_action("wrist-flexion")
time.sleep(2.3)
robot.do_action("rest")

robot.do_action("closed-fist")
time.sleep(1.2)
robot.do_action("rest")

robot.do_action("wrist-extension")
time.sleep(1.3)
robot.do_action("rest")

robot.do_action("forearm-pronation")
time.sleep(2.0)
robot.do_action("rest")


sim.finish()
